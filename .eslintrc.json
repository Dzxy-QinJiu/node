{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.4.1",
      "flowVersion": "0.76.0"
    },
    "propWrapperFunctions": [
      "forbidExtraProps"
    ]
    // The names of any functions used to wrap the
    // propTypes object, e.g. `forbidExtraProps`.
    // If this isn't set, any propTypes wrapped in
    // a function will be skipped.
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "ReactIntl": true,
    "window": true,
    "React": true,
    "ReactDOM": true,
    "$": true,
    "jQuery": true,
    "window.jQuery": true,
    "_": true,
    "moment": true,
    "Intl": true,
    "Trace": true,
    "oplateConsts": true,
    "sendMessage": true,
    "alt": true,
    "_paq": true,
    "Oplate": true,
    "config": true
  },
  "rules": {
    /**react**/
    //防止在React组件定义中丢失props验证
    "react/prop-types": 0,
    "react/no-string-refs": 1,
    "react/no-find-dom-node": 0,
    //防止在React组件定义中丢失displayName
    "react/display-name": 0,
    //禁止某些propTypes
    "react/forbid-prop-types": 0,
    //在JSX中强制布尔属性符号
    "react/jsx-boolean-value": 0,
    //在JSX中验证右括号位置
    "react/jsx-closing-bracket-location": 0,
    //在JSX属性和表达式中加强或禁止大括号内的空格。
    "react/jsx-curly-spacing": 0,
    //验证JSX中的props缩进
    "react/jsx-indent-props": 0,
    //在数组或迭代器中验证JSX具有key属性
    "react/jsx-key": 2,
    // 限制JSX中单行上的props的最大数量
    "react/jsx-max-props-per-line": 0,
    //JSX中不允许使用箭头函数和bind
    "react/jsx-no-bind": 0,
    //防止在JSX中重复的props
    "react/jsx-no-duplicate-props": 2,
    //防止使用未包装的JSX字符串
    "react/jsx-no-literals": 0,
    //在JSX中禁止未声明的变量
    "react/jsx-no-undef": [
      2,
      {
        "allowGlobals": true
      }
    ],
    //为用户定义的JSX组件强制使用PascalCase
    "react/jsx-pascal-case": 2,
    //强化props按字母排序
    "react/jsx-sort-props": 0,
    //防止反应被错误地标记为未使用
    "react/jsx-uses-react": 1,
    //防止在JSX中使用的变量被错误地标记为未使用
    "react/jsx-uses-vars": 1,
    //防止使用危险的JSX属性
    "react/no-danger": 1,
    //防止在componentDidMount中使用setState
    "react/no-did-mount-set-state": 2,
    //防止在componentDidUpdate中使用setState
    "react/no-did-update-set-state": 2,
    //防止this.state的直接变异
    "react/no-direct-mutation-state": 2,
    //防止每个文件有多个组件定义
    "react/no-multi-comp": 1,
    //防止使用setState
    "react/no-set-state": 0,
    //防止使用未知的DOM属性
    "react/no-unknown-property": 1,
    //为React组件强制执行ES5或ES6类
    "react/prefer-es6-class": 1,
    //使用JSX时防止丢失React
    "react/react-in-jsx-scope": 1,
    //防止没有children的组件的额外结束标签
    "react/self-closing-comp": 0,
    /**react end **/
    //强制使用一致的缩进
    "indent": [
      "warn",
      4,
      {
        "SwitchCase": 1
      }
    ],
    //强制在 function的左括号之前使用一致的空格,不是用空格
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    //要求操作符周围有空格
    "space-infix-ops": "error",
    //禁止使用多个空格
    "no-multi-spaces": "error",
    //强制数组方括号中使用一致的空格
    "array-bracket-spacing": "error",
    //强制在一元操作符前后使用一致的空格
    "space-unary-ops": "error",
    //强制箭头函数的箭头前后使用一致的空格
    "arrow-spacing": "error",
    //强制分号之前和之后使用一致的空格
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    //冒号前后的空格
    "key-spacing": "error",
    "linebreak-style": 0,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    //禁用不必要的转义字符
    "no-useless-escape": 1,
    // 禁用 console
    "no-console": 1,
    //禁用 alert、confirm 和 prompt
    "no-alert": 2,
    //禁止不必要的分号
    "no-extra-semi": 1,
    //禁止出现空语句块
    "no-empty": 1,
    //禁止出现未使用过的变量
    "no-unused-vars": 1,
    //禁用未声明的变量，除非它们在 /*global */ 注释中被提到
    "no-undef": 1,
    //禁止在条件中使用常量表达式
    "no-constant-condition": 1,
    //    禁止多次声明同一变量
    "no-redeclare": 1,
    //    禁止在正则表达式中使用控制字符
    "no-control-regex": 0,
    "eqeqeq": [
      "error",
      "smart"
    ]
  }
}